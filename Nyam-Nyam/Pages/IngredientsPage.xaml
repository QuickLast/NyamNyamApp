      d:DesignHeight="784" d:DesignWidth="1350"
      Title="IngredientsPage">

    <Grid Background="#fed7c1">
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="600"/>
        </Grid.RowDefinitions>

        <TextBlock Text="List of Ingredients"
               Style="{StaticResource Title}"
               Grid.Column="0"
               Grid.Row="0"
               Margin="20 30 0 0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>
        
        <StackPanel Grid.Row="0"
                Margin="20 100 0 0"
                Height="60"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left">
            <TextBlock Text="Total available ingredients for the amount ($):"
                Margin="0 0 20 0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"/>
            <TextBox x:Name="SearchTB"
                Width="300"
                Height="56"
                HorizontalAlignment="Left"/>
        </StackPanel>

        <CheckBox
        Grid.Column="0"
        Grid.Row="0"
        Margin="20 180 0 0"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Content="Show only dishes with available ingredients">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <StackPanel Grid.Column="1"
                Grid.Row="0"
                Margin="20 170 0 0"
                Height="60"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                Grid.ColumnSpan="2">
            <TextBlock Text="Price:"
           Margin="0 0 20 0"
           HorizontalAlignment="Left"
           VerticalAlignment="Center"/>
            <Slider Name="RectangleHeight"
                Width="200"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Value="50"
                Minimum="0"
                Maximum="200" 
                SmallChange="1"
                LargeChange="10"
                TickPlacement="BottomRight"
                TickFrequency="10"/>
        </StackPanel>

